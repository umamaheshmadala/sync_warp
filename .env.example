# ============================================
# API CONFIGURATION
# ============================================

# Base URL for your API
# Development: http://localhost:54321 (Supabase local)
# Staging: https://staging-api.syncapp.com
# Production: https://api.syncapp.com
VITE_API_BASE_URL=http://localhost:54321

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# ============================================
# FEATURE FLAGS
# ============================================

# Enable offline functionality
VITE_ENABLE_OFFLINE_MODE=true

# Enable push notifications
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# Enable debug mode (shows extra logging, dev tools, etc.)
VITE_ENABLE_DEBUG_MODE=true

# Enable error reporting (e.g., Sentry integration)
VITE_ENABLE_ERROR_REPORTING=false

# ============================================
# THIRD-PARTY SERVICES
# ============================================

# Google Maps API Key
# Get from: https://console.cloud.google.com/google/maps-apis
# Enable Maps JavaScript API, Places API, and Geocoding API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================================
# LOGGING
# ============================================

# Log level: debug | info | warn | error
VITE_LOG_LEVEL=debug

# Enable console logs (disable in production for performance)
VITE_ENABLE_CONSOLE_LOGS=true

# ============================================
# MOBILE CONFIGURATION
# ============================================

# Deep link scheme for mobile app
# Development: syncapp-dev://
# Staging: syncapp-staging://
# Production: syncapp://
VITE_MOBILE_DEEP_LINK_SCHEME=syncapp-dev

# Capacitor server URL (where the mobile app loads web assets from)
# Development: http://localhost:5173
# Staging: https://staging.syncapp.com
# Production: https://app.syncapp.com
VITE_CAPACITOR_SERVER_URL=http://localhost:5173
